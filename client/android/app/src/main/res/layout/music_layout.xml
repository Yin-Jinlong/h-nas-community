<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="horizontal" android:gravity="center">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="标题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/music_title" android:textStyle="bold"
                android:textSize="14sp" style="@style/TextAppearance.Compat.Notification.Title"/>
        <TextView
                android:text="歌手"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/music_artists"
                style="@style/TextAppearance.Compat.Notification.Title" android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center|end"
            android:paddingHorizontal="10dp">
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp" android:id="@+id/music_play_pause"
                android:background="#00FFFFFF" android:alpha="0.7"/>
        <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp" android:id="@+id/music_close"
                android:background="#00FFFFFF" android:alpha="0.7"/>
    </LinearLayout>
</LinearLayout>